<% if current_trainer %>
  <h2>Welcome <%= current_trainer.name %>!</h2>
<!-- Have a boy/girl sprite based on gender -->
    <% if current_trainer.gender.downcase == "boy" %>
      <img src="http://cdn.bulbagarden.net/upload/e/e7/Sun_Moon_Protagonist_male.png" alt="Boy" width="105" height="236">
    <% elsif current_trainer.gender.downcase == "girl" %>
      <img src="http://cdn.bulbagarden.net/upload/7/74/Sun_Moon_Protagonist_female.png" alt="Girl" width="107" height="236">
    <% else %>
      <img src="http://vignette3.wikia.nocookie.net/youtubepoop/images/4/4c/Pokeball.png/revision/latest?cb=20150418234807">
    <% end %>

<% end %>
<br>
<a href="/trainers/<%= current_trainer.id %>/teams/new">Create a new team</a>

<br>
Your teams:
<br>
<ul>
  <% current_trainer.teams do |team| %>
    <li>
      <a href="/trainers/<%= current_trainer.id %>/teams/<%= team.id %>"><%= team.name %></a>
    </li>
  <% end %>
</ul>
